-- [selectMenuById]
SELECT 
  DISTINCT M.MENU_URL,M.MENU_NAME 
FROM
  TF_M_ROLE_MENU M 
WHERE M.ROLE_VALUE IN 
  (SELECT RF.ROLE_VALUE 
   FROM
    TF_M_ROLE_REF RF,
    TF_M_STAFF SF 
   WHERE RF.ROLE_ID = SF.ROLE_ID 
    AND SF.STAFF_CODE =#staff_id#
    UNION
    SELECT 5 FROM DUAL)
   and M.PARENT_TYPE=#PARENT_TYPE#
ORDER BY BY_ORDER ASC;